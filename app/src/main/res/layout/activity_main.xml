<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/run_without_service" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_system_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/run_with_system_service" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_custom_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/run_with_custom_service" />

</LinearLayout>